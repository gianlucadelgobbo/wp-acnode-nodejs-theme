extends layout
block content
  .row
    .rientro.col-md-auto
      .h1="Looking for the FLxER community?"
      p="As you should know, FLxER Community migrated to AVnode.net."
      p
        !="Your account is there and you can login with the same account data and password on "
        a(href="https://avnode.net/", target="_blank")="https://avnode.net/"
      p
        ="For any info "
        a(href="MAILTO:info@flxer.net")="info@flxer.net"
      a.btn.btn-primary(href="https://avnode.net/", target="_blank")="GO ON AVNODE >>"
