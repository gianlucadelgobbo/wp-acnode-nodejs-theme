extends layout
block content
  include ../_partials/carousel
  //article.home
    .text-center(style="padding-top: 20px;")
      h1.entry-title
        span.sr-only=config.project_name+" "
        !=config.meta.headline[sessions.current_lang]
    //section(itemprop="owns", itemscope, itemtype='http://schema.org/OwnershipInfo')
      .home-services(itemprop="typeOfGood", itemscope, itemtype='http://schema.org/ItemList')
        .sr-only(itemprop="name")=global.__("Services")
        .container-fluid
          .row.sameheightcnt
            .col-xl-2.offset-xl-2.col-lg-3.col-md-3.sameheight.boxItem(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
              meta(itemprop="position", content="1")
              !=profile['wpcf-row-1-col-1-html-box']
            .col-xl-2.col-lg-3.col-md-3.sameheight.boxItem(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
              meta(itemprop="position", content="2")
              !=profile['wpcf-row-1-col-2-html-box']
            .col-xl-2.col-lg-3.col-md-3.sameheight.boxItem(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
              meta(itemprop="position", content="3")
              !=profile['wpcf-row-1-col-3-html-box']
            .col-xl-2.col-lg-3.col-md-3.sameheight.boxItem(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
              meta(itemprop="position", content="4")
              !=profile['wpcf-row-1-col-4-html-box']

            
            
            
    //section.home-events(itemprop="owns", itemscope, itemtype='http://schema.org/OwnershipInfo')
      .container-fluid(itemprop="typeOfGood", itemscope, itemtype='http://schema.org/ItemList')
        header.text-center
          h2.entry-title(itemprop="name")=global.__("Live Visuals")
          .row
            .col-xl-6.offset-xl-3.col-lg-8.offset-lg-2
              .col-xs-12!=posttype_events.post_content
        .row.isotope.results
          each result, position in results.events
            .col-xl-3.col-lg-4.col-md-6.col-sm-6.col-xs-12.isotopeitem(class=position>5 ? "hidden-lg visible-xl" : "")
              include boxes/box_event
        .text-center.read-more
          a(href=lang_preurl+'/portfolio/live-visuals/', title=global.__("See all Events"))
            !=global.__("See all Events")
            !=" "
            i.icon-right
            
            
            
