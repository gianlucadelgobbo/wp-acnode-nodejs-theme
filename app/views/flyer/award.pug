extends layout
block content
  .container
    article.pagepaddingtop#container(itemscope, itemtype='http://schema.org/CreativeWork')
      .row(itemprop="award")
        .col-sm-9
          header
            h1.entry-title(itemprop='name')=result.post_title
          .rientro
            include ../_partials/inc_type_hidden
            include ../_partials/inc_datemonth_wp
            div(itemprop='description')!=result.post_content
            .row
              .col-md-6
                //include ../_partials/inc_capauthors
              .col-md-6
                include ../_partials/inc_websites
            include ../_partials/inc_share
        .col-sm-3
          if result.featured.thumbnail
            img.img-responsive.main-image(src=result.featured.thumbnail.replace("https://flyer.dev.flyer.it", config.domain), alt=result.post_title, itemprop='image')

      include ../_partials/inc_grid
