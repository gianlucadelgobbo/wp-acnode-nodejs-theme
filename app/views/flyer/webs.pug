extends layout
block content
  .container-fluid
    article#container(itemprop="owns", itemscope, itemtype='http://schema.org/ItemList')
      .row
        .col-xl-6.offset-xl-3.col-lg-8.offset-lg-2.col-xs-12
          .header
            header
              .text-center
                h1.entry-title(itemprop="name")=posttype.post_title+(tag ? ": #"+tag : "")
            .text-center.mb-3
              include ../_common/inc_share
            aside
              .text-center
                include ../_common/inc_tags
      if results
        .post_content
          !=posttype.post_content
        .row.isotope.results
          each result, position in results
            .col-xl-3.col-lg-4.col-md-6.col-sm-6.col-xs-12.isotopeitem
              include boxes/box_web
        include ../_common/inc_pagination