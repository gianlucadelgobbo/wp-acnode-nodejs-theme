article.pagepaddingtop#container(itemscope, itemtype='http://schema.org/Article')
  .row(itemprop='mainEntityOfPage')
    .col-sm-9
      header(itemprop="headline")
        h1.entry-title(itemprop='name')=result.avnode.title+" "
      .rientro
        include ../_partials/inc_type_hidden
        .d-none.type.text-muted
          i(class="fa fa-cube")
          !=" News"

        .text-right
          include ../_partials/inc_datemonth
          br
        div(itemprop='description')!=result.avnode.about
        include ../_partials/inc_websites
        include ../_partials/inc_share
    .col-sm-3
      .mb-3(itemprop='image', itemscope, itemtype="http://schema.org/ImageObject")
        img.img-fluid.main-image(src=result.avnode.imageFormats.small, alt=result.avnode.title, itemprop='url')
        meta(itemprop="width" content="1280")
        meta(itemprop="height" content="720")
      include ../_partials/inc_authors

