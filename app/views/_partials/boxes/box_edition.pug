.boxItem(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
  meta(itemprop="position", content=position+1)
  .Edition(itemprop="item", itemscope, itemtype='http://schema.org/Event')
    .thumb-cnt(itemprop='image', itemscope, itemtype="http://schema.org/ImageObject")
      if result.featured.thumbnail
        a(href='/editions/'+result.slug+"/", rel='bookmark', title!=result.post_title, itemprop='url')
          img.img-fluid(src=result.featured.thumbnail.replace("https://flyer.dev.flyer.it", config.domain), alt!='Image for: '+result.post_title, itemprop='contentUrl')
          meta(itemprop="width" content="480")
          meta(itemprop="height" content="270")
    .box-list
      .box-list-cnt
        .text-muted
          include ../../_partials/inc_eventdate
        h3.list_title(itemprop='name')
          a(itemprop='url', href='/editions/'+result.slug+"/", rel='bookmark', title=result.post_title)!=result.post_title
        .places
          include ../../_partials/inc_place
        .text-muted.small.excerpt
          if result.excerpt && result.excerpt.rendered
            div(itemprop='description')!=result.excerpt.rendered
          span.sr-only(itemprop='organizer')
